<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dao.MemberDao">

    <resultMap type="com.example.entity.Member" id="MemberMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="sex" column="sex" jdbcType="VARCHAR"/>
        <result property="age" column="age" jdbcType="INTEGER"/>
        <result property="tel" column="tel" jdbcType="VARCHAR"/>
        <result property="img" column="img" jdbcType="VARCHAR"/>
        <result property="role" column="role" jdbcType="VARCHAR"/>
        <result property="delstatus" column="delstatus" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="VARCHAR"/>
        <result property="protypeid" column="protypeid" jdbcType="VARCHAR"/>
        <result property="mbtype" column="mbtype" jdbcType="VARCHAR"/>
        <result property="jktype" column="jktype" jdbcType="VARCHAR"/>
    </resultMap>

    <!--登录-->
    <select id="selectOne" resultMap="MemberMap">
        select * from Member where 1=1 and username=#{username} and password=#{password} and delstatus=0 and status='正常'
    </select>
    <!--查询所有-->
    <select id="selectAll" resultMap="MemberMap">
        select * from Member where 1=1 and delstatus=0
        <if test="key!=null and key!=''">
            and name like "%"#{key}"%" or username like "%"#{key}"%"
        </if>
        <if test="key1!=null and key1!=''">
            and tel like "%"#{key1}"%"
        </if>
        <if test="username!=null and username!=''">
            and username =#{username}
        </if>
        order by id desc
    </select>

    <!--通过ID查询-->
    <select id="findById" parameterType="int" resultType="com.example.entity.Member">
        select * from Member  where id=#{id}
    </select>

    <!--新增所有列-->
    <insert id="add" keyProperty="id" useGeneratedKeys="true">
        insert into member values (null,#{username}, #{password}, #{name}, #{sex}, #{age}, #{tel}, #{img},'用户',0,'正常',#{protypeid},#{mbtype},#{jktype})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update member
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="sex != null and sex != ''">
                sex = #{sex},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="tel != null and tel != ''">
                tel = #{tel},
            </if>
            <if test="img != null and img != ''">
                img = #{img},
            </if>
            <if test="role != null and role != ''">
                role = #{role},
            </if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="protypeid != null and protypeid != ''">protypeid = #{protypeid},</if>
            <if test="mbtype != null and mbtype != ''">mbtype = #{mbtype},</if>
            <if test="jktype != null and jktype != ''">jktype = #{jktype},</if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <update id="delete">
        update member set delstatus=1 where id = #{id}
    </update>
</mapper>

